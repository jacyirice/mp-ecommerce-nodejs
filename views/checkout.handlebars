
<div class="as-search-wrapper" role="main">
  <div class="as-navtuck-wrapper">
    <div class="as-l-fullwidth as-navtuck" data-events="event52">
      <div>
        <div class="pd-billboard pd-category-header">
          <div class="pd-l-plate-scale">
            <div class="pd-billboard-background">
              <img src="./assets/music-audio-alp-201709" alt="" width="1440"
                height="320"
                data-scale-params-2="wid=2880&amp;hei=640&amp;fmt=jpeg&amp;qlt=95&amp;op_usm=0.5,0.5&amp;.v=1503948581306"
                class="pd-billboard-hero ir">
            </div>
            <div class="pd-billboard-info">
              <h1 class="pd-billboard-header pd-util-compact-small-18">Tienda
                e-commerce</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="as-search-results as-filter-open as-category-landing as-desktop"
    id="as-search-results">
    <section class="shopping-cart dark">
      <div id="accessories-tab" class="as-accessories-details">
        <div class="as-accessories" id="as-accessories">
          <div class="as-accessories-header">
            <div class="as-search-results-count">
              <span class="as-search-results-value"></span>
            </div>
          </div>

          <div class="container">
            <div class="py-5 text-center">
              <h2>Checkout</h2>
            </div>

            <div class="row">
              <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center
                  mb-3">
                  <span class="text-muted">Item</span>
                  <span class="badge badge-secondary badge-pill">1</span>
                </h4>
                <ul class="list-group mb-3" id="itens">
                  <li class="list-group-item d-flex justify-content-between
                    lh-condensed">
                    <div>
                      <h6 class="my-0">{{title}}</h6>
                    </div>
                    <span class="text-muted">R$ {{price}}</span>
                  </li>
                </ul>
              </div>
              <div class="col-md-8 order-md-1">

                <h4 class="mb-3">Informações pessoais</h4>
                <form class="needs-validation" method="POST" action=""
                  id="form-checkout">
                  <input type="hidden" id="product-id" value="1234">
                  <input type="hidden" id="product-description" value="Celular de Tienda e-commerce">
                  <input type="hidden" id="product-img" value="{{img}}">
                  <input type="hidden" id="product-title" value="{{title}}">
                  <input type="hidden" id="product-price" value="{{price}}">
                  <input type="hidden" id="product-unit" value="1">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="payer-name">Primeiro nome</label>
                      <input type="text" class="form-control" id="payer-name"
                        placeholder="João" value="" required>
                      <div class="invalid-feedback">
                        Primeiro nome valido é requerido.
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="payer-surname">Sobrenome</label>
                      <input type="text" class="form-control" id="payer-surname"
                        placeholder="Silva" value="" required>
                      <div class="invalid-feedback">
                        Sobrenome valido é requerido.
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="payer-phone-area_code">Código de área:</label>
                      <input type="text" class="form-control"
                        id="payer-phone-area_code" placeholder="55" value=""
                        required>
                      <div class="invalid-feedback">
                        codigo de area valido é requerido.
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="payer-phone-number">Numero de telefone</label>
                      <input type="number" class="form-control"
                        id="payer-phone-number" placeholder="90000-0000"
                        value=""
                        required>
                      <div class="invalid-feedback">
                        Numero de telefone valido é requerido.
                      </div>
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="payer-email">Email</label>
                    <input type="email" class="form-control" id="payer-email"
                      placeholder="you@example.com" required>
                    <div class="invalid-feedback">
                      Please enter a valid email address for shipping updates.
                    </div>
                  </div>
                  <h4 class="mb-3">Endereço</h4>
                  <div class="mb-3">
                    <label for="payer-address-street_name">Nome da rua</label>
                    <input type="text" class="form-control"
                      id="payer-address-street_name" placeholder="1234 Main St"
                      required>
                    <div class="invalid-feedback">
                      Please enter your shipping street name.
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-5 mb-3">
                      <label for="payer-address-street_number">Número da casa:</label>
                      <input type="number" class="form-control"
                        id="payer-address-street_number" placeholder="14"
                        required>
                      <div class="invalid-feedback">
                        Please enter your shipping street number.
                      </div>
                    </div>
                    <div class="col-md-3 mb-3">
                      <label for="payer-address-zip_code">Codigo postal</label>
                      <input type="text" class="form-control"
                        id="payer-address-zip_code" placeholder="" required>
                      <div class="invalid-feedback">
                        Zip code required.
                      </div>
                    </div>
                  </div>
                  <hr class="mb-4">
                  <button class="btn btn-primary btn-lg btn-block"
                    id="checkout-btn" type="submit">Prosseguir</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <div id="modal-checkout" class="container" style="align-items: center;">
      <h1 style="text-align: center;">Confirmar item</h1>
      <ul class="list-group mb-3" id="itens">
                  <li class="list-group-item d-flex justify-content-between
                    lh-condensed">
                    <div>
                      <h6 class="my-0">{{title}}</h6>
                    </div>
                    <span class="text-muted">R$ {{price}}</span>
                  </li>
                </ul>
      <div id="button-checkout" style="display: flex;justify-content: center;">

        </div>
  </div>
  <script src="../assets/checkout.js"></script>
  <script src="https://www.mercadopago.com/v2/security.js" view="checkout"></script>
